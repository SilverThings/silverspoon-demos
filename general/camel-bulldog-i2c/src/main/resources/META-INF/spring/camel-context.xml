<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
          http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
          http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
   <camelContext xmlns="http://camel.apache.org/schema/spring">
      <restConfiguration bindingMode="off" component="jetty" host="${sensor.host}" port="${sensor.port}" />
      <rest path="/pca9685">
         <get uri="/reset">
            <to uri="direct:reset"/>
         </get>

         <get uri="/alloff">
            <to uri="direct:alloff"/>
         </get>

         <get uri="/led1/on">
            <to uri="direct:led1on"/>
         </get>

         <get uri="/led1/off">
            <to uri="direct:led1off"/>
         </get>

         <post uri="/led1/set">
            <to uri="direct:led1set"/>
         </post>
      </rest>

      <route>
         <from uri="direct:reset"/>
         <!-- PCA9685 init -->
         <transform><simple>00a1</simple></transform><to uri="bulldog:i2c?address=0x40"/>
         <transform><simple>0104</simple></transform><to uri="bulldog:i2c?address=0x40"/>
         <transform><simple>fc0010</simple></transform><to uri="bulldog:i2c?address=0x40"/>
      </route>

      <route>
         <from uri="direct:alloff"/>
         <!-- turn all LEDs off -->
         <transform><simple>fc0010</simple></transform><to uri="bulldog:i2c?address=0x40"/>
      </route>

      <route>
         <from uri="direct:led1on"/>
         <!-- turn LED1 on (full brightness) -->
         <transform><simple>0A0000ff0f</simple></transform><to uri="bulldog:i2c?address=0x40"/>
      </route>

      <route>
         <from uri="direct:led1off"/>
         <!-- turn LED1 off -->
         <transform><simple>0A00000000</simple></transform><to uri="bulldog:i2c?address=0x40"/>
      </route>

      <route>
         <from uri="direct:led1set"/>
         <!-- set LED1's brightness -->
         <transform><simple>0A0000${bodyAs(String)}</simple></transform><to uri="bulldog:i2c?address=0x40"/>
      </route>
   </camelContext>
</beans>
